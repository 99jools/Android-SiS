<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:id="@+id/layout4">




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="The following will be encrypted and saved to the shared Dropbox folder for the group below:"
        android:id="@+id/label_filename"
        android:paddingTop="18dp"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_filename"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:layout_below="@+id/label_filename"
        android:textColor="@android:color/holo_blue_light"/>

    <Spinner
        android:popupBackground="@android:color/darker_gray"
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/text_filename"
   android:background="@android:color/holo_blue_light"
    />

       <Button
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="OK"
           android:id="@+id/buttonOK"
           android:layout_gravity="center_horizontal"
           android:onClick="onClickOK"
           android:layout_alignParentBottom="true"
           android:layout_centerHorizontal="true" />
   </RelativeLayout>
